{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "request.json",
  "type": "object",
  "title": "CFE Crime request",
  "properties": {
    "assessment": {
      "type": "object",
      "properties": {
        "assessment_date": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "assessment_date"
      ],
      "additionalProperties": false
    },
    "section_under_18": {
      "type": "object",
      "properties": {
        "client_under_18": {
          "type": "boolean"
        }
      },
      "required": [
        "client_under_18"
      ],
      "additionalProperties": false
    },
    "section_passported_benefit": {
      "type": "object",
      "properties": {
        "passported_benefit": {
          "type": "boolean"
        }
      },
      "required": [
        "passported_benefit"
      ],
      "additionalProperties": false
    },
    "section_initial_means_test": {
      "type": "object",
      "properties": {
        "case_type": {
          "type": "object",
          "description": "The case type",
          "existingJavaType": "uk.gov.justice.laa.crime.meansassessment.staticdata.enums.CaseType"
        },
        "magistrate_court_outcome": {
          "type": "object",
          "description": "The magistrates court outcome",
          "existingJavaType": "uk.gov.justice.laa.crime.meansassessment.staticdata.enums.MagCourtOutcome"
        },
        "has_partner": {
          "type": "boolean"
        },
        "income": {
          "type": "array",
          "items": {
            "type": "object",
            "existingJavaType": "uk.gov.justice.laa.crime.meansassessment.service.stateless.Income"
          }
        },
        "dependant_children": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "age_range": {
                "type": "object",
                "description": "Age Range of children",
                "existingJavaType": "uk.gov.justice.laa.crime.meansassessment.staticdata.enums.stateless.AgeRange"
              },
              "count": {
                "type": "number",
                "format": "integer",
                "minimum": 1
              }
            },
            "required": [
              "age_range",
              "count"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "case_type",
        "magistrate_court_outcome",
        "has_partner",
        "income",
        "dependant_children"
      ],
      "additionalProperties": false
    },
    "section_full_means_test": {
      "type": "object",
      "properties": {
        "outgoings": {
          "type": "array",
          "items": {
            "type": "object",
            "existingJavaType": "uk.gov.justice.laa.crime.meansassessment.service.stateless.Outgoing"
          }
        }
      }
    }
  },
  "required": [
    "assessment"
  ],
  "additionalProperties": false
}
