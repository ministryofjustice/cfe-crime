{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "response.json",
  "type": "object",
  "title": "CFE Crime response",
  "$defs": {
    "value": {
      "type": "number",
      "format": "decimal",
      "minimum": 0
    },
    "result": {
      "type": "string",
      "enum": ["FULL", "PASS", "FAIL", "INEL"]
    },
    "outcome": {
      "type" : "string",
      "enum": ["eligible", "ineligible"]
    }
  },
  "properties": {
    "result": {
      "type": "object",
      "properties": {
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      }
    },
    "initial_means_test": {
      "type": "object",
      "properties": {
        "gross_household_income_annual": {
          "$ref": "#/$defs/value"
        },
        "weighting": {
          "$ref": "#/$defs/value"
        },
        "adjusted_annual_income": {
          "$ref": "#/$defs/value"
        },
        "lower_threshold": {
          "$ref": "#/$defs/value"
        },
        "higher_threshold": {
          "$ref": "#/$defs/value"
        },
        "result": {
          "$ref": "#/$defs/result"
        },
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      },
      "additionalProperties": false,
      "required": [
        "gross_household_income_annual",
        "weighting"
      ]
    },
    "full_means_test": {
      "type": "object",
      "properties": {
        "result": {
          "$ref": "#/$defs/result"
        },
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      },
      "additionalProperties": false,
      "required": [
        "result",
        "outcome"
      ]
    }
  },
  "additionalProperties": false,
  "required": ["under_18"]
}
