{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "response.json",
  "type": "object",
  "title": "CFE Crime response",
  "$defs": {
    "value": {
      "type": "number",
      "format": "decimal",
      "minimum": 0
    },
    "outcome": {
      "type" : "object",
      "existingJavaType": "uk.gov.justice.laa.crime.cfecrime.enums.Outcome"
    }
  },
  "properties": {
    "outcome": { "$ref": "#/$defs/outcome" },
    "section_under_18_response": {
      "type": "object",
      "properties": {
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      },
      "additionalProperties": false,
      "required": [
        "outcome"
      ]
    },
    "section_passported_benefit_response": {
      "type": "object",
      "properties": {
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      },
      "additionalProperties": false,
      "required": [
        "outcome"
      ]
    },
    "section_initial_means_test_response": {
      "type": "object",
      "properties": {
        "gross_household_income_annual": {
          "type": "number",
          "format": "decimal",
          "minimum": 0
        },
        "weighting": {
          "$ref": "#/$defs/value"
        },
        "adjusted_annual_income": {
          "type": "number",
          "format": "decimal",
          "minimum": 0
        },
        "lower_threshold": {
          "$ref": "#/$defs/value"
        },
        "higher_threshold": {
          "$ref": "#/$defs/value"
        },
        "full_assessment_available": {
          "type": "boolean"
        },
        "outcome": {
          "$ref": "#/$defs/outcome"
        }
      },
      "additionalProperties": false,
      "required": [
        "gross_household_income_annual",
        "adjusted_annual_income",
        "lower_threshold",
        "higher_threshold",
        "outcome",
        "weighting"
      ]
    },
    "section_full_means_test_response": {
      "type": "object",
      "properties": {
        "outcome": {
          "$ref": "#/$defs/outcome"
        },
        "disposable_income": {
          "$ref": "#/$defs/value"
        },
        "total_aggregated_income": {
          "$ref": "#/$defs/value"
        },
        "adjusted_living_allowance": {
          "$ref": "#/$defs/value"
        },
        "total_annual_aggregated_expenditure": {
          "$ref": "#/$defs/value"
        },
        "eligibility_threshold": {
          "$ref": "#/$defs/value"
        }
      },
      "additionalProperties": false,
      "required": [
        "disposable_income",
        "total_aggregated_income",
        "adjusted_living_allowance",
        "total_annual_aggregated_expenditure",
        "outcome",
        "eligibility_threshold"
      ]
    }
  },
  "additionalProperties": false,
  "required": ["outcome"]
}
